        var hamburger = $(this);
        var mobileM = $('#mobile-menu');
        e.stopPropagation();
        hamburger.toggleClass('is-active');
        mobileM.fadeToggle(100);
        mobileM.toggleClass('mobile-menu-active');
        $('body, html').toggleClass('no-scroll');
        $('.overlay').fadeToggle();
        $('body').click(function (e) {
            if ($(e.target).closest('#mobile-menu').length === 0) {
                mobileM.fadeOut();
                mobileM.removeClass('mobile-menu-active');
                $('body, html').removeClass('no-scroll');
                $('.overlay').fadeOut();
                hamburger.removeClass('is-active');
            }
        });
    });

