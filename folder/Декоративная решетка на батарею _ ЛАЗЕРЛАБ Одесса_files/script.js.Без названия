    var customCallback = document.getElementById('callback');
    if (customCallback) {
        customCallback.addEventListener('submit', function(e){
            var http = new XMLHttpRequest();
            var f = this;
            e.preventDefault();
            if ($('.required_select').val() === '0') {
                $(this).parent('div').addClass('err-wrap')
            } else {
                $('.form-preloader').css('display', 'flex');
                $('.checkout-modal').css('overflow', 'visible');
                http.open("POST", "/mail-file.php", true);
                http.onreadystatechange = function() {
                    if (http.readyState === 4 && http.status === 200) {
                        $('.form-preloader').fadeOut();
                        $('.checkout-modal').fadeOut().css('overflow', 'auto');
                        $('.order-modal').fadeIn();
                        $('.overlay').fadeIn();
                    }
                };
                http.onerror = function() {
                    alert('Извините, данные не были переданы');
                };
                http.send(new FormData(f));
            }

        }, false);
    }

    var customCallbackWood = document.getElementById('wood-callback');
    if (customCallbackWood) {
        customCallbackWood.addEventListener('submit', function(e){
            var http = new XMLHttpRequest();
            var f = this;
            e.preventDefault();
            /////////////////////////////////////////////
            var num = $('#wood-callback .required_select').length;
            for (var i = 0; i < num; i++) {
                var curr = $('.required_select')[i];
                if (curr.value === '0' || curr.value === '') {
                    $(curr).parent('div').addClass('err-wrap');
                } else {
                    $(curr).parent('div').removeClass('err-wrap');
                }
            }
            if ($('.required_select').parent('div').hasClass('err-wrap')) {
                $('.send-btn').addClass('disabled-btn');
                console.log('hasClass(err-wrap)');
            } else {
                $('.send-btn').removeClass('disabled-btn');
                $('.form-preloader').css('display', 'flex');
                http.open("POST", "/mail-file-wood.php", true);
                http.onreadystatechange = function() {
                    if (http.readyState === 4 && http.status === 200) {
                        $('.form-preloader').fadeOut();
                        $('.order-modal').fadeIn();
                        $('.overlay').fadeIn();
                    }
                };
                http.onerror = function() {
                    alert('Извините, данные не были переданы');
                };
                http.send(new FormData(f));
            }
            /////////////////////////////////////////////

        }, false);
    }

