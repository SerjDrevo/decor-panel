    $('.tab-next').click(function (e) {
        e.preventDefault();
        e.stopPropagation();
        if ($(this).parent().find('li.active').next().is(':last-child')) {
            $(this).parent().find('li:first-of-type').children('a').trigger('click');
        } else {
            $(this).parent().find('li.active').next().children('a').trigger('click');
        }
    });

    $('.tab-prev').click(function (e) {
        e.preventDefault();
        e.stopPropagation();
        if ($(this).parent().find('li.active').prev().is(':first-child')) {
            $(this).parent().find('li:last-of-type').children('a').trigger('click');
        } else {
            $(this).parent().find('li.active').prev().children('a').trigger('click');
        }
    });
    // перебрать элементы div на странице
    $('.layouts__gallery li img').each(function (index, element) {
        // index (число) - текущий индекс итерации (цикла)
        // данное значение является числом
        // начинается отсчёт с 0 и заканчивается количеству элементов в текущем наборе минус 1
        // element - содержит DOM-ссылку на текущий элемент
        var src = $(element).attr('src');
        $(element).parent('a').css('background','url('+ src +') no-repeat center / cover');


        // console.log('Индекс элемента div: ' + index + '; id элемента = ' + $(element).attr('id'));
    });
    
});
