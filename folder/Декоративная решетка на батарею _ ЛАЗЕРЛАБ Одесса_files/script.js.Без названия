    $('.order-modal__close').click(function () {
        $(this).parent().fadeOut();
        $('.overlay').fadeOut();
        $('body, html').removeClass('no-scroll');
    });

    $('.overlay').click(function () {
        $('.form-modal').fadeOut();
        $('.order-modal').fadeOut();
        $('.checkout-modal').fadeOut();
        $('.laser-modal').fadeOut();
        $(this).fadeOut();
        $('body, html').removeClass('no-scroll');
    });

    $(".callback").submit(function() {
        var th = $(this);
        $.ajax({
            type: "POST",
            url: "/mail.php",
            data: th.serialize()
        }).done(function() {
            $('.form-modal').fadeOut();
            $('.overlay').fadeIn();
            $('.order-modal').fadeIn();
            // setTimeout(function(){
            //     $('.order-modal').fadeOut();
            //     $('.overlay').fadeOut();
            // }, 2000);
        });
        return false;
    });

