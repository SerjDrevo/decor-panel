                        '<div class="layouts__previews-top">' +
                        '<div class="layouts__previews">' +
                        '<a href="javascript:void(0);" class="layouts__v-img-vert layouts__v-img"><img src="' + verticalImg + '"></a>' +
                        '<a href="javascript:void(0);" class="layouts__v-img-hor layouts__v-img"><img src="' + itemNum + '"></a>' +
