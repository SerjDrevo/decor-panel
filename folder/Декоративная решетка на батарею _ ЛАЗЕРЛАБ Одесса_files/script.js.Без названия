                    var top = $(id).offset().top;
                    setTimeout(function(){
                        $('body,html').animate({scrollTop: top}, 1000);
                    }, 500);
                });
            },
            afterShow : function(){
                $('.layouts__v-img-hor').click(function () {
                    var newSrc = $(this).children('img').attr('src');
                    var cssValues = {
                        "width":"100%",
                        "top":"20%",
                        "position":"absolute"
                    };
                    $('.layout-preview .fancybox-image').hide();
                    if ($('.fancybox-image-hor').length === 0) {
                        $('.fancybox-image-wrap').append('<img class="fancybox-image-hor" src="'+ newSrc +'">');
                    } else {
                        $('.layout-preview .fancybox-image-hor').show();
                    }
                    $('.layout-preview .fancybox-image-hor').css(cssValues);
                });
                $('.layouts__v-img-vert').click(function () {
                    $('.layout-preview .fancybox-image-hor').hide();
                    $('.layout-preview .fancybox-image').show();
                });
            },
            beforeShow : function(){
                $('.layout-preview .fancybox-image-hor').remove();
                $('.layout-preview .fancybox-image').show();
            },
            beforeClose: function(){
                $('body, html').removeClass('no-scroll');
                $('.layout-preview .fancybox-image-hor').remove();
                // $('.layout-preview .fancybox-image').removeClass('layouts__v-img-hor_active');
            },
