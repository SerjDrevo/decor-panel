var $=jQuery;
$(document).ready(function () {

    if ($(window).width() > 992) {
        new WOW().init();
    }

    $("input[type^=\"tel\"]").mask("+380999999999");

    $(window).scroll(function () {
        if ($(this).scrollTop() > 0) {
            $('#scroller').fadeIn();
        } else {
            $('#scroller').fadeOut();
        }
    });
    $('#scroller').click(function () {
        $('body,html').animate({
            scrollTop: 0
        }, 400);
        return false;
    });

